<div class="container">
  <div class="row">
    <h2>タグ一覧・追加</h2>
  </div>
  <div class="row">
    <table>
      <tr>
        <%= form_with model: @tag, url: tags_path, local:true do |f| %>
          <th>タグ名</th>
          <th><%= f.text_field :name %></th>
          <th><%= f.submit "新規登録", class: "btn btn-success" %></th>
        <% end %>
      </tr>
    </table>
  </div>
<!--タグリスト-->
<table>
  <% @tag_list.each do |list|%>
    <%=list.name %>
    <%="(#{list.youtubers.count})" %>
  <% end %>
</table>
