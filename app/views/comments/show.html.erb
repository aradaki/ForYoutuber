<% youtuber.youtuber_comments.each do |youtuber_comment| %>
    <div class="pt-2 px-2" style="background-color: #fffffe; border: 2px solid #272343; border-radius: 2px;">
        <%# rateを表示 %>
        <div class="review-rating" data-score="<%= product_comment.rate %>">評価：</div>
        
        <div class="text-left">
            <p>投稿者：<%= youtuber_comment.user.name %></p>
            <p><%= youtuber_comment.comment %></p>
        </div>

        <div class="text-right">
            <p>
                投稿日：<%= youtuber_comment.created_at.strftime('%Y/%m/%d') %> |
                <% if youtuber_comment.user == current_user %>
                    <%= link_to youtuber_youtuber_comment_path(youtuber_comment.youtuber, youtuber_comment), method: :delete, class: "btn btn-sm btn-danger" do %>
                        コメント削除 <i class="fas fa-trash"></i>
                    <% end %>
                <% end %>
            </p>
        </div>
    </div>

    <div class="pb-2"></div>

<% end %>