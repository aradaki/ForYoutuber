

<div class="container">
  <div class="row">
    <h2 class="title">Youtuber新規登録</h2>
  </div>
  <%= form_with model: @youtuber, url: youtubers_path, local:true do |f| %>
  <div class="row">
    <div class="col-lg-7, mx-auto">
      <table>
        <tr>
          <th>Youtuber画像</th>
          <th><%= f.attachment_field :image, placeholder:"Youtuber画像" %></th>
        </tr>
        <tr>
          <th>Youtuber名</th>
          <th><%= f.text_field :name %></th>
        </tr>
        <tr>
          <th>Youtuber説明</th>
          <th><%= f.text_area :introduction %></th>
        </tr>
        <tr>
          <th>タグ(,で区切れます)</th>
          <th><%= f.text_field :tag %></th>
        </tr>
        <tr>
          <th>URL</th>
          <th><%= f.text_field :url %></th>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-2, mx-auto">
       <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>