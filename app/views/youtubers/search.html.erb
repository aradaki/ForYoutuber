<div class="container">
  <div class="row">
    <div class="col s12">

      <!--キーワード検索-->
      <div id ="test1" >
 　　　　　　　　　　　<!--Ransackを使うとsearch_form_forを使える！-->
        <%= search_form_for @search,url: search_youtubers_path do |f| %>

          <div class="form-group">
            <i class="material-icons prefix">キーワード検索</i>
            <%= f.search_field :name_cont, class: 'form-control', placeholder: 'キーワードで検索' %>
            <%= f.submit '検索',:class => "btn btn-success" %>
          </div>
        <% end %>
      <!--キーワード検索の結果を表示-->
        <div class="col s6">
          <div class="card" id = "test1">
            <div class="blue-grey darken-1">
              <ul class="card mb-0">
                <% @results.each do |result| %>
                  <%= render 'youtubers/youtuber' , a_product: result %>
                  <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!--タグ検索-->
      <div id ="test2">
        <div class="form-group">
        <i class="material-icons prefix">タグ検索</i>
        <!--タグはform_tagを用いて-->
        <%= form_tag('search', method: "get") do %>
          <%= text_field_tag :search %>
          <%= submit_tag '検索', :class =>  "btn btn-success" %>
        <% end %>
        </div>
　　　　　　　　　　　　　　　<!--タグ検索の結果を表示-->
        <div class="col s6">
          <div class="card" id = "test1">
            <div class="blue-grey darken-1">
              <ul class="card mb-0">
                <% @tag_search.each do |result| %>
                  <%= render 'tag' , a_product: result %>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
